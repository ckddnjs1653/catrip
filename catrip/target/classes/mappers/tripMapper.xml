<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.ct.mapper.tripMapper">
  
  
  	
 	<!-- 회원가입 -->
 	<insert id="insertMember">
 	insert into member(id, pw, name, email, tel, regdate)
 	values(#{id},#{pw},#{name},#{email},#{tel},CURDATE())
 	</insert>  
 	<!-- 회원가입 -->  
  
	<!-- 로그인 -->
	<select id="login" resultType="com.ct.domain.MemberVO">
		select * from member
		where id = #{id} and pw = #{pw}
	</select>
	<!-- 로그인 -->
	
	<!-- 여행지 글쓰기 -->
	<insert id="regist2">
		insert into trip(title, t_content) 
		values(#{title}, #{t_content})
	</insert>
	<!-- 여행지 글쓰기 -->
	
	<!-- 여행지 게시판 글목록 조회 -->
	<select id="board2" resultType="com.ct.domain.TripVO">
		select * from trip
	</select>
	<!-- 여행지 게시판 글목록 조회 -->
	
	<!-- 글 내용보기 -->
	<select id="getBoard2" resultType="com.ct.domain.TripVO">
		select * from trip
		where t_bno = #{bno}
	</select>
	<!-- 글 내용보기 -->
  
  
  	<!-- 글 목록 조회1  -->
  	<select id="boardList" resultType="com.ct.domain.BoardVO">
  		select * from board
  	</select>
  	<!-- 글 목록 조회1  -->
  	
  	<!-- 글쓰기 -->
  	<insert id="regist1">
  		insert into board( subject, content) 
		values(#{subject}, #{content})
  	</insert>
  	<!-- 글쓰기 -->
  
  </mapper>